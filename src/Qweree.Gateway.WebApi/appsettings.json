{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "AuthenticationService" : {
        "ClusterId": "qweree.authentication",
        "Match": {
          "Path": "/auth/{*any}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }, {
            "ResponseHeader": "Access-Control-Allow-Credentials",
            "Set": "true",
            "When": "Always"
          },{
            "ResponseHeader": "Access-Control-Allow-Origin",
            "Set": "http://localhost:5000",
            "When": "Always"
          }]
      },
      "CdnService" : {
        "ClusterId": "qweree.cdn",
        "Match": {
          "Path": "/cdn/{*any}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/cdn"
          }, {
            "ResponseHeader": "Access-Control-Allow-Credentials",
            "Set": "true",
            "When": "Always"
          },{
            "ResponseHeader": "Access-Control-Allow-Origin",
            "Set": "http://localhost:5000",
            "When": "Always"
          }]
      },
      "PiccService" : {
        "ClusterId": "qweree.picc",
        "Match": {
          "Path": "/picc/{*any}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/picc"
          }, {
            "ResponseHeader": "Access-Control-Allow-Credentials",
            "Set": "true",
            "When": "Always"
          },{
            "ResponseHeader": "Access-Control-Allow-Origin",
            "Set": "http://localhost:5000",
            "When": "Always"
          }]
      }
    },
    "Clusters": {
      "qweree.authentication": {
        "Destinations": {
          "localhost": {
            "Address": "http://localhost/auth/"
          }
        },
        "SessionAffinity": {
          "Enabled": true,
          "Policy": "Cookie",
          "FailurePolicy": "Redistribute",
          "AffinityKeyName": "Session",
          "Cookie": {
            "Expiration": "03:00:00",
            "MaxAge": "1.00:00:00",
            "HttpOnly": false,
            "SameSite": "None",
            "SecurePolicy": "Always"
          }
        }
      },
      "qweree.cdn": {
        "Destinations": {
          "localhost": {
            "Address": "http://localhost/cdn/"
          }
        },
        "SessionAffinity": {
          "Enabled": true,
          "Policy": "Cookie",
          "FailurePolicy": "Redistribute",
          "AffinityKeyName": "Session",
          "Cookie": {
            "Expiration": "03:00:00",
            "MaxAge": "1.00:00:00",
            "HttpOnly": false,
            "SameSite": "None",
            "SecurePolicy": "Always"
          }
        }
      },
      "qweree.picc": {
        "Destinations": {
          "localhost": {
            "Address": "http://localhost/picc/"
          }
        },
        "SessionAffinity": {
          "Enabled": true,
          "Policy": "Cookie",
          "FailurePolicy": "Redistribute",
          "AffinityKeyName": "Session",
          "Cookie": {
            "Expiration": "03:00:00",
            "MaxAge": "1.00:00:00",
            "HttpOnly": false,
            "SameSite": "None",
            "SecurePolicy": "Always"
          }
        }
      }
    }
  }
}
